<!DOCTYPE html>
<html>

    <head>
        <meta charset='utf-8' />

        <link href="/users/GUEST/main.css" rel="stylesheet"   
                type="text/css">
        <script src="http://ajax.googleapis.com/ajax/libs/prototype/1.7.2.0/prototype.js" type="text/javascript"></script>
        <script src="http://ajax.googleapis.com/ajax/libs/scriptaculous/1.9.0/scriptaculous.js" type="text/javascript"></script>
        <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.2.26/angular.js"></script>
        <script src="/users/GUEST/main.js"
                type="text/javascript"></script>
        <script src="/users/GUEST/widget.js"
                type="text/javascript"></script>
        <script src="/users/GUEST/dragndrop.js"
                type="text/javascript"></script>
          

       
        
    </head>

    <body ng-app="app" ng-controller = "Ctrl">
	<div id="real">
        <!-- MAIN CONTENT -->
        <div id = "topbar">
            <ul id="wid_set">
                <li id="addwid">add
                    <ul id="addlist">
                        <li id="addmemo">Memo</li>
                    </ul>
                </li>
                <li id="delwid">delete</li>
            </ul>
            <div id="gsearch">
                <form method="get" action="http://www.google.com/search" target="_blank">
                    <input type="text" name="q" size="30" placeholder="google search">
                    <button type = "submit" >search</button>
                </form>
            </div>
	<div id="info">
            <form action = "/logout" method="post">
                <p class="logout"><%= UserName %></p> <button class="logout" type = "submit"><img id = "logout" src = "/users/GUEST/logout.png" /></button>
            </form>
            <div class="clock" >
                <span my-current-time="format"></span>
                <div>{{propiedadPrueba}}</div>
            </div>
	</div>
        </div>
        <div id="main">
            <div id = "section2">
                <!--
                <div id = "todolists" class="widget">
                     <img class="end"src="/users/GUEST/noun_17398.png"/>
                    <span>{{remain()}} of {{lists.length}} remaining</span>
                    [ <a href="" ng-click="archive()">archive</a> ]
                    <ul id = "todolist">
                        <li ng-repeat = "list in lists">
                            <input type = "checkbox" ng-model = "list.done">
                            <span class = "done-{{list.done}}">
                                {{list.text}};
                            </span>
                        </li>
                    </ul>

                    <form ng-submit = "todo()">
                        <input type = "text" ng-model = "todotext" size = "30" placeholder = "add new todo list" />
                        <input class = "btn-primary" type = "submit" value = "add" />
                    </form>
                    
                </div>
                -->

               <% var widgetmemo = JSON.parse(widget);
                  for(var i = 0; i < widgetmemo.widget.length; i++){ %>
                    <div class="widget w_memo" style="position: relative; z-index: 0; left: <%- widgetmemo.widget[i].left %>; top:  <%- widgetmemo.widget[i].top %>;" >
                    <img class="end"src="/users/GUEST/noun_17398.png"/>
                    <textarea rows="8" cols="25"><%- widgetmemo.widget[i].memo %></textarea>
                    </div>
                <%   }  %>



            </div>

            <div id = "dock">
                <div id = "ddock">
                    <div class = "subdock" id = "leftdock">
                        <ul id="leftdocklist">
                    <% var userdata = JSON.parse(userapp);
                      for(var i = 0; i < userdata.app.length; i++){ 
                            if(userdata.app[i].position=="left"){ %>
                            <li><a href = "<%- userdata.app[i].url %>" target = "_blank">
                                <img src = "<%- userdata.app[i].fav %>" class ="tosave"/></a>
                            </li>
                    <%   }}  %>
                        </ul>
                    </div>
                    <div class = "subdock" id = "centerdock">
                        <button id = "apps" ng-click = "slide()"><img src="/images/apps.png" /></button>
                    </div>
                    <div class = "subdock" id = "rightdock">
                        <ul id="rightdocklist">
                    <% 
                      for(var i = 0; i < userdata.app.length; i++){ 
                            if(userdata.app[i].position=="right"){%>
                            <li><a href = "<%- userdata.app[i].url %>" target = "_blank">
                                <img src = "<%- userdata.app[i].fav %>" class ="tosave"/></a>
                            </li>
                    <%   }}  %>
                        </ul>
                    </div>
                </div>
                <div id = "panel" ng-show="slideapps">
                    
                    <div id = "modifyurl">
                        <button id = "addurl" ng-click = "addurl()" ng-show = "urlbtn"><img src = "/users/GUEST/noun_21727.png"/></button></br>
                        <input id = "slurl" type = "text" name = "url" ng-show = "slideurl" size = "25" value = "http://"/>
                        <button type = "submit" ng-show = "slideurl" ng-click = "addurl2()">+</buttom>
                    </div>
                    <div id = "trash">
                        <img src = "/users/GUEST/noun_18853.png" />
                    </div>
                    <ul id = "panelul">
                    <% 
                      for(var i = 0; i < userdata.app.length; i++){ 
                            if(userdata.app[i].position=="center"){%>
                            <li><a href = "<%- userdata.app[i].url %>" target = "_blank">
                                <img src = "<%- userdata.app[i].fav %>" class ="tosave"/></a>
                            </li>
                    <%   }}  %>
                    </ul>
                </div>
                
            </div>
                                
         </div>

	</div>
    </body>
</html>
