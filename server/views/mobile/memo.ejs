<!DOCTYPE html>
<html ng-app="myApp" ng-controller="AppController">
    <head>
        <link href="/css/memo.css" rel="stylesheet" type="text/css">
         <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.2.26/angular.js"></script>
        <script src="http://code.angularjs.org/1.2.0rc1/angular-route.min.js"></script>
        <script src="http://code.angularjs.org/1.2.0rc1/angular-touch.min.js"></script>
        <script src="/js/sidebar.js" type="text/javascript"></script>
        <script src="/js/accordian.js" type="text/javascript"></script>
    </head>
    <body ng-app ng-swipe-left="showmenu=false" ng-swipe-right="showmenu=true">
        
        <div>
            <div id="menuleft" ng-class="{hide:!showmenu,slide:showmenu}">
              
                <ul>
                    <li><a href ="/mobile_main">HOME</a></li>
                </ul>
            </div>

            <div id="all" ng-class="{hide:showmenu,slide:!showmenu}" >
                <div class="overlay" ng-class="{show:showmenu}"></div>
                <div id = "real">
                    <div id = "topbar">
                        <img ng-click="toggleMenu()" id = "sidebutton" src="/public/images/button.png"/>

                        <div id="gsearch">
                            <form method="get" action="http://www.google.com/search" target="_blank">
                                <input type="text" name="q" size="30" placeholder="google search">
                                <button type = "submit" >search</button>
                            </form>
                        </div>

                        <div id="info">
                            <form action = "/logout" method="post">
                                <p class="logout"><%= UserName %></p> <button ng-click="save()" class="logout" type = "submit"><img id = "logout" src = "/public/images/logout.png" /></button>
                            </form>
                        </div>
                    </div>
                </div>
                <div>
                    <div class="accordion__container" ng-controller="myCtrl">

                    <% 
                        for(var i = 0; i < widget.length; i++){
                            var title="";
                            if (widget[i].memo.length<=8)
                                title=widget[i].memo;
                            else{
                                for (var j=0; j<8;j++){
                                    title= title + widget[i].memo[j];
                                }
                                title = title + "...";
                            }
                            %>

                            <div class="accordion__tab" >
                                <div class="accordion__tab-title" ng-show="show_tab=!isOpenTab('tab <%=i%>')"  ng-click="openTab('tab <%=i%>')"><%- title %></div>
                                <div class="accordion__tab-content" ng-show="show_con=isOpenTab('tab <%=i%>')" ng-click="closeTab('tab <%=i%>')"><%- widget[i].memo %></div>
                            </div>
                        <%}
                    %>
                    </div>
                </div>
            </div>

       </div>
    </body>
</html>